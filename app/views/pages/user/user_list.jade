extends ../../includes/layout

block content
    .container
        .row
            table.table.table-hover.table-bordered
                thead
                    tr
                        th 名字
                        th 时间
                        th 查看
                        th 更新
                        th 删除
                tbody
                    each item in users
                        tr(class="item-id-#{item._id}")
                            td #{item.name}
                            td #{moment(item.meta.updateAt).format('MM/DD/YYYY MM:HH')}
                            td: a(href="../movie/#{item._id}",target="_blank") 查看
                            td: a(href="../admin/update/#{item._id}") 修改
                            td
                                button.btn.btn-danger.del(data-id="#{item._id}", type="button") 删除

    script(src="/libs/scripts/js/user/user_list.min.js")                                  